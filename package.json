{
  "name": "chayen",
  "version": "0.2.0",
  "description": "An RPC framework with so much hype going on. such wow.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublishOnly": "npm run build",
    "lint": "tslint --project .",
    "test": "npm run build && jest",
    "build": "tsc --project ."
  },
  "author": "Awesome Developers at Taskworld",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test/.*\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "importSort": {
    ".ts": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "dependencies": {
    "axios": "^0.16.2",
    "bluebird": "^3.5.0",
    "body-parser": "^1.18.2",
    "boom": "^6.0.0",
    "ioredis": "^3.1.4",
    "joi": "^11.1.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.1",
    "lodash": "^4.17.4",
    "object-hash": "^1.1.8"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.12",
    "@types/boom": "^4.3.7",
    "@types/ioredis": "^0.0.25",
    "@types/jest": "^21.1.1",
    "@types/joi": "^10.4.3",
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^3.0.25",
    "@types/koa-router": "^7.0.23",
    "@types/lodash": "^4.14.76",
    "@types/object-hash": "^0.5.29",
    "jest": "^21.2.1",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.5.3"
  }
}
